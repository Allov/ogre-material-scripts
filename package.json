{
    "name": "ogrematerialscripts",
    "displayName": "Ogre Material Scripts Syntax Highlighting",
    "description": "Syntax Highlighting for Ogre Material Scripts",
    "version": "0.0.3",
    "publisher": "allov",
    "author": {
        "name": "Frédérik Charest",
        "email": "frederik.charest@gmail.com",
        "url": "https://github.com/Allov"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Allov/ogre-material-scripts.git"
    },
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "ogrematerialscripts",
            "aliases": ["Ogre Material Scripts", "Syntax", "Ogre"],
            "extensions": [".compositor",".material",".program"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "ogrematerialscripts",
            "scopeName": "source.ogre",
            "path": "./syntaxes/OgreMaterialScripts.tmLanguage"
        }]
    }
}